<h3>Your Details:</h3>
<ul>
	<li>User name: <%= @user.name %></li>
	<li>Email address: <%= @user.email %></li>
	<% if current_user.owner == true %>
		<li>Owner Status: <%= @user.owner %></li>
	<% end %>
</ul>
<%= render 'wodprs' %>
<p>_____________________________________</p>
<%= render 'movementprs' %>
<p>_____________________________________</p>

<div>
	<div>
    <% if current_user.owner %>
      <%= link_to "Individual Athlete Movement", admin_movement_path(@movement.id), class: "show_adminmovements" %> |
      <%= link_to "Existing Athlete Movements", admin_movements_path, class: "load_adminmovements" %><br>
      <%= link_to "New Athlete Movement", new_admin_movement_path %><br>
      <%= link_to "Individual Athlete WOD", admin_wod_path(@wod.id), class: "show_adminwods" %> |
      <%= link_to "Existing Athlete WODs", admin_wods_path, class: "load_adminwods" %><br>
      <%= link_to "New Athlete WOD", new_admin_wod_path %><br>
      <%= link_to "View current users of WODapp", users_path %>
    <% end %>
    	<h3>Your results:</h3>
		<% if current_user.usermovements.size > 0 %>
			<%= link_to "Individual Movements", user_usermovement_path(current_user, @usermovement.id), class: "show_movements" %> |
			<%= link_to "All Movements", user_usermovements_path(current_user.id), class: "load_movements" %><br>
		<% else %>
			<h3>You have no existing movements</h3>
		<% end %>
		<%= link_to "New Movement", new_user_usermovement_path(current_user) %><br>
		<% if current_user.userwods.size > 0 %>
			<%= link_to "Individual Wods", user_userwod_path(current_user, @userwod.id), class: "show_wods" %> |
			<%= link_to "All Wods", user_userwods_path(current_user.id), class: "load_wods" %><br>
		<% else %>
			<h3>You have no existing wods</h3>
		<% end %>
		<%= link_to "New Wod", new_user_userwod_path(current_user) %><br>
	<p>_____________________________________</p>
	</div>
</div>

<div class="crossfit-container">
</div>
<div class="movement-container">
</div>
<div class="wod_actions">
</div>
